###############################################
# Data mode for the SPA
# local | online | seed
###############################################
VITE_DATA_MODE=local

###############################################
# Supabase (used in online mode)
###############################################
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

###############################################
# Local API (Dev-only, enabled inside Vite dev server)
# Base path, pagination limits, and simple rate limiting.
# Effective only when VITE_DATA_MODE=local and running bun run dev
###############################################
VITE_LOCAL_API_BASE_PATH=/api
VITE_LOCAL_API_MAX_LIMIT=50        # max items per page (1..200)
VITE_LOCAL_API_STRICT_TAGS=true    # 400 on unknown tag slugs when true
VITE_LOCAL_API_RPM=120             # per-IP requests per minute (10..600)

###############################################
# Light server (Production-like local server)
# Set ENABLE_LIGHT_SERVER=true to run a tiny server you provide separately
# and have it expose GET /tags, /api/agents, /api/agents/:idOrSlugOrWallet, etc.
# These settings are for that server to read (not for the SPA).
###############################################
ENABLE_LIGHT_SERVER=false          # true -> enable your prod-like local server
LIGHT_SERVER_PORT=8787             # port for the light server
LIGHT_SERVER_API_BASE_PATH=/api    # base path for agents endpoints (/api/...)
LIGHT_SERVER_RPM=120               # per-IP requests per minute (10..600)
LIGHT_SERVER_MAX_LIMIT=50          # max items per page (1..200)
LIGHT_SERVER_STRICT_TAGS=true      # 400 on unknown tag slugs when true

# If your light server proxies to Supabase in online mode, set these:
LIGHT_SERVER_UPSTREAM_SUPABASE_URL=
LIGHT_SERVER_UPSTREAM_SUPABASE_ANON_KEY=

###############################################
# Dev server (Vite) port: pass via CLI if needed
# bun run dev -- --port 5173
###############################################